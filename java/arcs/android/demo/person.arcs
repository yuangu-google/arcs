meta
  namespace: arcs.android.demo

schema Person
  name: Text

particle ReadPerson in 'arcs.android.demo.DemoService.ReadPerson'
  person: reads Person {name}

particle WritePerson in '.DemoService.WritePerson'
  person: writes Person {name}

@arcId('personArc')
recipe PersonRecipe
  recipePerson: create

  WritePerson
    person: writes recipePerson

  ReadPerson
    person: reads recipePerson


@arcId('chatArcOne')
recipe ChatRecipeOne
  outMessage: create 'messageOne' @persistent
  inMessage: map 'messageTwo'
  ChatParticle
    inMessage: reads inMessage
    outMessage: writes outMessage

@arcId('chatArcTwo')
recipe ChatRecipeTwo
  outMessage: create 'messageTwo' @persistent
  inMessage: map 'messageOne'
  ChatParticle
    inMessage: reads inMessage
    outMessage: writes outMessage

particle ChatParticle in '.ChatParticle'
  outMessage: writes Chat { message: Text }
  inMessage: reads Chat { message: Text }

